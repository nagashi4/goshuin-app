<%= form_with model: @stamp, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "スタンプの名称" %><br />
    <%= f.text_field :title, id:"stamp_title" %>
  </div>

  <div class="field">
    <%= f.label :prefecture, "都道府県" %><br />
    <%#<%= f.text_area :prefecture, class: :form__text, id:"stamp_prefecture" %>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"prefecture-select"}) %>

  </div>

  <div class="field">
    <%= f.label :place, "場所" %><br />
    <%= f.text_area :place, class: :form__text, id:"stamp_place" %>
  </div>

  <div class="field">
    <%= f.label :image, "スタンプの画像" %><br />
    <%= f.file_field :image, id:"stamp_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>